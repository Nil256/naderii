<main>
  <div class="container">
    <div class="row">
      <div class="col-8 mx-auto">
        <h1>プロフィールの編集</h1>
        <%= form_with model: @user, url: user_path(@user.username), local: true do |f| %>
          <div class="form-group">
            <%= f.label :profile_image, "アイコン" %>
            <%= f.attachment_field :profile_image, class: "form-control-file" %>
          </div>

          <div class="form-group">
            <%= f.label :display_name, "表示名" %>
            <%= f.text_field :display_name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :introduction, "自己紹介文" %>
            <%= f.text_area :introduction, rows: 5, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "更新", class: "btn btn-primary" %>
          </div>
        <% end %>
        <div class="mt-5">
          <%= link_to dangeredit_user_path, class: "text-danger" do %>
            <small>危険性のある設定を開く</small>
          <% end %>
          </div>
      </div>
    </div>
  </div>
</main>
