<% is_self = (user_signed_in? && @user.id == current_user.id) %>
<div class="container-fluid">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-7 mt-3">
      <div class="d-flex sticky-top bg-white pb-2 border-bottom mb-3">
        <div class="align-self-center">
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "png", size: "100x100", fallback: "user_profile_default", class: "rounded-circle nbs-cursor-grab" %>
        </div>
        <div class="ml-2 align-self-center">
          <p class="mb-0 h5"><b><%= @user.display_name %></b></p>
          <p class="mb-0 text-black-50"><small>@<%= @user.username %></small></p>
        </div>
        <% if is_self %>
        <div class="align-self-center ml-auto mr-2">
          <%= link_to edit_user_path(@user.username), class: "text-secondary", "title" => "編集する" do %>
            <i class="fas fa-pen fa-lg"></i>
          <% end %>
        </div>
        <% end %>
      </div>

      <div class="border-bottom mb-3">
        <p>
          <% if @user.introduction.present? %>
            <%= show_raw_text(@user.introduction) %>
          <% else %>
            <span class="text-black-50"><small>
              (自己紹介はまだ書いてる途中かも...)
              <% if is_self %>
              <br>Tips: 右上にある<i class="fas fa-pen"></i>で自己紹介を追加できるよ！ (←この文は他の人からは見えないから安心してね)
              <% end %>
            </small></span>
          <% end %>
        </p>
      </div>

      <%= render "layouts/cries", cries: @user.cries.order(created_at: :desc), show_timeline: true %>
    </div>
    <div class="col-3"></div>
  </div>
</div>
