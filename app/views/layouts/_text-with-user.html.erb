<div class="d-flex flex-nowrap">
  <div>
    <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: "png", size: "50x50", fallback: "user_profile_default.png", class: "rounded-circle nbs-cursor-grab" %>
  </div>
  <div class="ml-2 pt-1">
    <p class="mb-0">
      <b><%= user.display_name %></b>
    </p>
    <p class="mb-0">
      <%= link_to user_path(user.username), class: "text-black-50" do %>
        <small>@<%= user.username %></small>
      <% end %>
    </p>
  </div>
</div>
<div class="mt-2 nad-cry-body">
  <%= text %>
</div>
