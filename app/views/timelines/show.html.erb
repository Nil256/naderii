<div class="container-fluid">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-7 mt-3">
      <div class="d-flex bg-white sticky-top border-bottom pb-2 mb-3">
        <div class="align-self-center">
          <p class="mb-0 h5"><b><%= @timeline.display_name %></b></p>
          <p class="mb-0 text-black-50"><small>@<%= @timeline.timelinename %></small></p>
        </div>
        <% if user_signed_in? && @timeline.user_id == current_user.id %>
        <div class="align-self-center ml-auto">
          <%= link_to edit_timeline_path(@timeline.timelinename), class: "text-secondary", "title" => "編集する" do %>
            <i class="fas fa-pen fa-lg"></i>
          <% end %>
        </div>
        <% end %>
      </div>

      <div class="border-bottom mb-3">
        <p><%= show_raw_text(@timeline.introduction) %></p>
      </div>

      <div class="nbs-css-cryformspace">
      <% @timeline.cries.order(created_at: :desc).each do |cry| %>
        <div class="nbs-css-crycard p-3">
          <div class="d-flex">
            <div>
              <%= attachment_image_tag cry.user, :profile_image, :fill, 50, 50, format: "png", size: "50x50", fallback: "user_profile_default.png", class: "rounded-circle nbs-css-cursor-grab" %>
            </div>
            <div class="ml-2 pt-1">
              <p class="mb-0">
                <b><%= advanced_truncated(cry.user.display_name, 50) %></b>
              </p>
              <p class="mb-0">
                <%= link_to user_path(cry.user.username), class: "text-black-50" do %>
                  <small>@<%= cry.user.username %></small>
                <% end %>
              </p>
            </div>
          </div>
          <div class="mt-2 nbs-css-cryleftmargin">
            <%= show_raw_text(cry.body) %>
          </div>
        </div>
      <% end %>
      </div>

      <% if user_signed_in? %>
      <div class="nbs-css-cryform bg-white">
        <%= form_with model: @cry, url: public_cries_path(@timeline.timelinename), local: true do |f| %>
          <div class="d-flex flex-column">
            <%= f.text_area :body, class: "form-control nbs-css-resize-none", rows: 4, placeholder: "" %>
            <div class="ml-auto">
              <%= button_tag type: "submit", class: "btn btn-primary d-contents", "title" => "投稿する" do %>
                <i class="fas fa-paper-plane fa-lg"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
    <div class="col-3"></div>
  </div>
</div>
