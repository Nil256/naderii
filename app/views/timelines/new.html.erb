<div class="container-fluid">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-7">
      <h1>タイムラインを作成する</h1>
      <%= form_with model: @timeline, local: true do |f| %>
        <div class="form-group">
          <%= f.label :timelinename, "タイムラインネーム" %>
          <%= f.text_field :timelinename, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :display_name, "表示名" %>
          <%= f.text_field :display_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "タイムラインを作る", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-3"></div>
  </div>
</div>
